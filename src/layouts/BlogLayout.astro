---
import Layout from './PageLayout.astro';
import type {MetaData} from '~/types';
import {getReadingTime} from '../utils/utils';
import SocialFollow from '~/components/ui/SocialFollow.astro';

export interface Props {
  metadata?: MetaData;
  post?: {
    title: string;
    author: string;
    pub_date: string;
    description?: string;
    tags?: string[];
    content: string;
  };
}

const {metadata = {}, post} = Astro.props;
---

<Layout metadata={metadata}>
  <div class="min-h-screen bg-background">
    <!-- Navigation -->
    <nav class="border-b bg-white/95 backdrop-blur-sm sticky top-0 z-40">
      <div class="container mx-auto px-6 py-4 max-w-7xl">
        <!-- Breadcrumb Navigation -->
        <div class="flex items-center gap-2 text-sm text-gray-600 mb-2">
          <a href="/" class="hover:text-gray-900 transition-colors">Home</a>
          <span>→</span>
          <a href="/blog" class="hover:text-gray-900 transition-colors">Blog</a>
          <span>→</span>
          <span class="text-gray-900 truncate max-w-xs">{post?.title}</span>
        </div>
        
        <!-- Back Button -->
        <a 
          href="/blog" 
          class="inline-flex items-center gap-2 text-gray-600 hover:text-gray-900 transition-colors font-medium"
        > 
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
          </svg>
          Back to blog 
        </a>
      </div>
    </nav>

    <!-- Main Content Area with TOC Layout -->
    <div class="relative">
      <!-- Article Container -->
      <article class="container mx-auto px-6 py-16 max-w-4xl lg:max-w-6xl lg:pl-[280px] xl:pl-[220px]">
        {post && (
          <!-- Article Header -->
          <header class="mb-16 space-y-6">
            <!-- Post Meta -->
            <div class="flex items-center gap-4 text-sm text-muted-foreground">
              <time datetime={post.pub_date}>
                {
                  new Date(post.pub_date).toLocaleDateString('en-US', {
                    year: 'numeric',
                    month: 'long',
                    day: 'numeric',
                  })
                }
              </time>
              <span>•</span>
              <span>By {post.author}</span>
              <span>•</span>
              <span>{getReadingTime(post.content)} min read</span>
              Follow: <SocialFollow mode='minimal'/>
            </div>
            
            <!-- Post Title -->
            <h1 class="text-4xl md:text-6xl font-bold text-foreground leading-tight">
              {post.title}
            </h1>
            
            <!-- Post Description -->
            {post.description && <p class="text-xl text-muted-foreground leading-relaxed max-w-3xl">{post.description}</p>}
            
            <!-- Tags -->
            {
              post.tags && post.tags.length > 0 && (
                <div class="flex flex-wrap gap-2 pt-4">
                  {post.tags.map((tag) => (
                    <a 
                      href={`/tags/${tag}`}
                      class="px-3 py-1 bg-muted text-muted-foreground hover:bg-accent hover:text-accent-foreground rounded-sm text-sm transition-colors"
                    >
                      {tag}
                    </a>
                  ))}
                </div>
              )
            }

          </header>
        )}


        <!-- Article Content -->
        <slot />
        <div class="mt-8">

          <SocialFollow mode='maximal'/>
        </div>
      </article>
    </div>
  </div>
</Layout>