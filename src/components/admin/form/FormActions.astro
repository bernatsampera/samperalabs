---
export interface Props {
  mode: 'create' | 'edit';
  cancelUrl: string;
  submitText?: string;
  cancelText?: string;
}

const {
  mode,
  cancelUrl,
  submitText = mode === 'create' ? 'Create Post' : 'Update Post',
  cancelText = 'Cancel'
} = Astro.props;
---

<div class="flex gap-4 pt-8">
  <button
    type="submit"
    class="px-6 py-3 bg-primary text-primary-foreground rounded-sm hover:bg-primary/90 transition-colors"
  >
    {submitText}
  </button>
  <a
    href={cancelUrl}
    class="px-6 py-3 border border-input text-primary rounded-sm hover:bg-accent transition-colors"
  >
    {cancelText}
  </a>
</div>
