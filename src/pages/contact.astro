---
import Layout from '~/layouts/PageLayout.astro';
import Button from '~/components/ui/Button.astro';

const metadata = {
  title: 'Contact | Bernat Sampera',
};
---

<Layout metadata={metadata}>
  <section class="py-16 md:py-24">
    <div class="container mx-auto px-6">
      <div class="max-w-4xl mx-auto">
        <div class="mb-16">
          <h1 class="text-4xl font-bold mb-2">Get in Touch</h1>
          <p class="text-xl text-gray-600">Learn how to integrate AI into your business.</p>
        </div>

        <div>
          <div class="space-y-8">
            <div>
              <h3 class="font-bold text-lg mb-2">Email</h3>
              <a href="mailto:info@samperalabs.com" class='hover:underline"'> info@samperalabs.com </a>
            </div>

            <div>
              <h3 class="font-bold text-lg mb-2">Socials</h3>
              <div class="flex space-x-4">
                <a
                  href="https://x.com/bsampera9"
                  target="_blank"
                  rel="noopener noreferrer"
                  class="text-gray-600 hover:opacity-70"
                >
                  Twitter
                </a>
                <a
                  href="https://www.linkedin.com/in/bernat-sampera-195152107/"
                  target="_blank"
                  rel="noopener noreferrer"
                  class="text-gray-600 hover:opacity-70"
                >
                  LinkedIn
                </a>
                <a
                  href="https://github.com/bernatsampera"
                  target="_blank"
                  rel="noopener noreferrer"
                  class="text-gray-600 hover:opacity-70"
                >
                  GitHub
                </a>
              </div>
            </div>

            <div>
              <h3 class="font-bold text-lg mb-2">Book a Call</h3>
              <p class="mb-4 text-gray-600">
                Prefer to discuss your project directly? Schedule a call to talk about your AI integration needs.
              </p>
              <a
                href="https://calendly.com/b-sampera/30min"
                target="_blank"
                rel="noopener noreferrer"
                class="inline-flex items-center font-medium hover:underline"
              >
                Schedule on Calendly
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 ml-1" viewBox="0 0 20 20" fill="currentColor">
                  <path
                    fill-rule="evenodd"
                    d="M10.293 5.293a1 1 0 011.414 0l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414-1.414L12.586 11H5a1 1 0 110-2h7.586l-2.293-2.293a1 1 0 010-1.414z"
                    clip-rule="evenodd"></path>
                </svg>
              </a>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
</Layout>
