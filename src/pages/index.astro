---
import Layout from '~/layouts/PageLayout.astro';
import Button from '~/components/ui/Button.astro';
import Bjjgym from '~/assets/images/bjjgym.webp';
import Packdensack from '~/assets/images/packdensack.webp';
import Kronologs from '~/assets/images/kronologs.webp';
import {Image} from 'astro:assets';

const metadata = {
  title: 'Sampera Labs - AI Integration Solutions',
};

const projects = [
  {
    title: 'BJJGym.com',
    description:
      'AI-powered platform for Brazilian Jiu-Jitsu practitioners to find gyms, open mats and places to train while traveling.',
    imageClass: 'bg-blue-50',
    url: '/projects/bjjgym',
    image: Bjjgym,
  },
  {
    title: 'PackdenSack.com',
    description: 'Create and share your own Packing Lists',
    imageClass: 'bg-green-50',
    url: '/projects/packdensack',
    image: Packdensack,
  },
  {
    title: 'Kronologs.com',
    description: 'Explore the lives of important people in history.',
    imageClass: 'bg-purple-50',
    url: '/projects/kronologs',
    image: Kronologs,
  },
];
---

<Layout metadata={metadata}>
  <section class="min-h-screen flex flex-col justify-center items-center pb-40 md:pb-60 text-center">
    <!-- Hero Section -->
    <div class="container mx-auto px-6">
      <div class="max-w-4xl mx-auto">
        <h1 class="text-5xl md:text-7xl font-medium mb-8 leading-tight tracking-tighter">Sampera Labs</h1>

        <p class="text-2xl md:text-3xl mb-6 text-gray-700 leading-relaxed min-h-[4rem]">
          <span id="rotatingTagline" class="text-lg block">
            Com més petites són les coses, més força individual tenen - Josep Pla</span
          >
          <span id="rotatingTagline" class="text-base font-light">
            (The smaller things are, the more individual strength they have.)
          </span>
        </p>
      </div>
    </div>
    <div class="absolute bottom-12 text-center w-full">
      <a href="#projects" class="inline-flex items-center font-medium">
        View Projects
        <svg
          xmlns="http://www.w3.org/2000/svg"
          class="h-5 w-5 ml-1 animate-bounce"
          viewBox="0 0 20 20"
          fill="currentColor"
        >
          <path
            fill-rule="evenodd"
            d="M16.707 10.293a1 1 0 010 1.414l-6 6a1 1 0 01-1.414 0l-6-6a1 1 0 111.414-1.414L9 14.586V3a1 1 0 012 0v11.586l4.293-4.293a1 1 0 011.414 0z"
            clip-rule="evenodd"></path>
        </svg>
      </a>
    </div>
  </section>

  <!-- Projects Section -->
  <section id="projects" class="py-24">
    <div class="container mx-auto px-6">
      <h2 class="text-3xl md:text-4xl font-bold mb-16 text-center">Our Projects</h2>

      {
        projects.map((project, index) => (
          <div class={`mb-32 ${index % 2 === 0 ? '' : 'lg:flex-row-reverse'} flex flex-col lg:flex-row items-center`}>
            <div class={`w-full lg:w-1/2 ${index % 2 === 0 ? 'lg:pr-12' : 'lg:pl-12'} mb-8 lg:mb-0`}>
              <div class={`${project.imageClass} aspect-video rounded-lg overflow-hidden shadow-lg`}>
                <Image src={project.image} alt={project.title} class="w-full h-full object-cover" />
              </div>
            </div>
            <div class="w-full lg:w-1/2">
              <h3 class="text-3xl font-bold mb-4">{project.title}</h3>
              <p class="text-xl text-gray-600 mb-6">{project.description}</p>
              <a
                href={project.url}
                class="inline-flex items-center font-medium hover:translate-x-1 transition-transform duration-300"
              >
                View Project Details
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 ml-1" viewBox="0 0 20 20" fill="currentColor">
                  <path
                    fill-rule="evenodd"
                    d="M10.293 5.293a1 1 0 011.414 0l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414-1.414L12.586 11H5a1 1 0 110-2h7.586l-2.293-2.293a1 1 0 010-1.414z"
                    clip-rule="evenodd"
                  />
                </svg>
              </a>
            </div>
          </div>
        ))
      }
    </div>
  </section>

  <!-- About Section -->
  <section id="about" class="py-24 bg-gray-50">
    <div class="container mx-auto px-6">
      <div class="max-w-3xl mx-auto">
        <h2 class="text-3xl md:text-4xl font-bold mb-12 text-center">About Sampera Labs</h2>

        <div class="prose prose-lg max-w-none">
          <p>
            Sampera Labs specializes in integrating AI solutions into websites and applications. With expertise in both
            AI development and web technologies, we help businesses leverage cutting-edge artificial intelligence to
            create better user experiences.
          </p>

          <p>
            Our approach focuses on practical AI implementations that provide real value, from chatbots and
            recommendation systems to content generation and data analysis tools.
          </p>
        </div>
      </div>
    </div>
  </section>

  <!-- Contact CTA -->
  <section class="py-24">
    <div class="container mx-auto px-6 text-center">
      <div class="max-w-2xl mx-auto">
        <h2 class="text-3xl font-bold mb-6">Let's work together</h2>
        <p class="text-xl mb-8 text-gray-600">
          Interested in integrating AI into your website or application? Let's discuss how AI can help your business
          grow.
        </p>
        <Button variant="primary" text="Get in Touch" href="/contact" />
      </div>
    </div>
  </section>
</Layout>

